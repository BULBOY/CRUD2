<!DOCTYPE html>
<html>
<head>
<title>Button-Activated Tables</title>
<style>
/* CSS styles go here */
button {
  padding: 10px 20px;
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  cursor: pointer;
}

table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #f2f2f2;
}

thead {
  background-color: #4CAF50;
  color: aliceblue;
  font-size: small;
  padding: 1em 0;
  width: 100%;
}
</style>
</head>
<body>

<button id="btn1">Open Table 1</button>
<button id="btn2">Open Table 2</button>

<form action="/api/tasks/read/" method="post">
<table id="table1" style="display: none; width: 100%;">
  <thead class="tdark">
  <tr>
    <th>Task Number</th>
    <th>Name</th>
    <th>E-mail</th>
    <th>Staff ID</th>
    <th>LOS</th>
    <th>Task type</th>
    <th>Asset Number</th>
    <th>Model</th>
    <th>Engineer</th>
    <th>Status</th>
  </tr>
  </thead>
  <% for(var i = 0; i < data.length; i++){ %>
    <tr>
    <td><%= data[i].taskNumber%></td>           
    <td><%= data[i].user.name%></td>
    <td><%= data[i].user.email%></td>
    <td><%= data[i].user.staffNumber%></td>
    <td><%= data[i].user.los%></td>
    <td><%= data[i].taskType%></td>
    <td><%= data[i].asset.number%></td>
    <td><%= data[i].asset.model%></td>
    <td><%= data[i].ownedByr%></td>
    <td><%= data[i].stat%></td>
    <td>
        <a href="/api/tasks/read/?id=<%=data[i]._id%>" class="update-btn">
            <button>Update</button>
        </a>
        <a class="delete-btn" data-id>
            <button>Delete</button>
        </a>
    </td>
    </tr>
</table>

<table id="table2" style="display: none;">
  <tr>
    <th>Header 1</th>
    <th>Header 2</th>
  </tr>
  <tr>
    <td>Content 1</td>
    <td>Content 2</td>
  </tr>
</table>

<script>
  /* JavaScript code goes here */
  const btn1 = document.getElementById("btn1");
  const btn2 = document.getElementById("btn2");
  const table1 = document.getElementById("table1");
  const table2 = document.getElementById("table2");

  btn1.addEventListener("click", () => {
    table1.style.display = "table";
    table2.style.display = "none";
  });

  btn2.addEventListener("click", () => {
    table1.style.display = "none";
    table2.style.display = "table";
  });
</script>

</body>
</html>
